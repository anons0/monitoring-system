{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "buildCommand": "python manage.py migrate"
  },
  "deploy": {
    "startCommand": "daphne -b 0.0.0.0 -p $PORT project.asgi:application",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}